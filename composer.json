{
  "name": "MyFrmwk/MyFrmwk",
  "description": "My MVC Framework.",
  "keywords": ["framework", "MyFrmwk"],
  "license": "MIT",
  "type": "project",
  "autoload": {
        "psr-4": {
            "MyFrmwk\\app\\core\\": ["./app/core"],
            "MyFrmwk\\app\\models\\": ["./app/models"],
            "MyFrmwk\\app\\core\\helpers\\": ["./app/core/helpers", "./app/core/exceptions"],
            "MyFrmwk\\app\\core\\system\\": ["./app/core/system"]
        },
    "files": [ "app/config/db.php", "app/config/settings.php", "app/config/constants.php", "app/config/functions.php", "app/core/language/site.php" ],
    "classmap": ["app/controllers/", "app/core/", "app/models/"]
    },
  "require": {
    "nesbot/carbon": "~1.20",
    "ezyang/htmlpurifier": "v4.9.2",
    "respect/validation": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "5.5.x-dev",
    "phpmd/phpmd": "2.4.3",
    "squizlabs/php_codesniffer": "3.0.x-dev",
    "phpdocumentor/phpdocumentor": "2.*"
  }
}
